@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="Inicio de sesión - Patitos S.A.">
    <meta name="author" content="Patitos S.A.">

    <title>Patitos S.A. - Inicio de Sesión</title>

    <!-- Custom fonts for this template-->
    <link href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i" rel="stylesheet">

    <!-- Custom styles for this template-->
    <link href="~/Content/Site2.css" rel="stylesheet">
</head>

<body class="bg-gradient-primary">

    <div class="container">
        <!-- Outer Row -->
        <div class="row justify-content-center align-items-center" style="height: 100vh;">
            <div class="col-xl-10 col-lg-12 col-md-9">
                <div class="card o-hidden border-0 shadow-lg">
                    <div class="card-body p-0">
                        <!-- Nested Row within Card Body -->
                        <div class="row">
                            <!-- Logo and Welcome Message -->
                            <div class="col-lg-6 d-flex flex-column justify-content-center align-items-center bg-light">
                                <img src="~/images/logo.png" alt="Logo de Patitos S.A." style="width: 200px; height: auto;" class="mb-4">
                                <h1 class="h4 text-gray-900">¡Bienvenido a Patitos S.A.!</h1>
                                <p class="text-muted text-center">Gestión de proyectos y tareas de manera sencilla y eficiente.</p>
                            </div>
                            <!-- Login Form -->
                            <div class="col-lg-6">
                                <div class="p-5">
                                    <div class="text-center">
                                        <h1 class="h4 text-gray-900 mb-4">Inicia Sesión</h1>
                                    </div>
                                    <form class="user" method="post" action="@Url.Action("Login", "Acceso")">
                                        <div class="form-group">
                                            <input type="email" name="correo" class="form-control form-control-user" placeholder="Correo Electrónico" required>
                                        </div>
                                        <div class="form-group">
                                            <input type="password" name="clave" class="form-control form-control-user" placeholder="Contraseña" required>
                                        </div>
                                        <button type="submit" class="btn btn-primary btn-user btn-block">Ingresar</button>
                                        @if (ViewBag.Error != null)
                                        {
                                            <div class="alert alert-danger mt-3" role="alert">@ViewBag.Error</div>
                                        }
                                    </form>
                                    <hr>
                                    <div class="text-center">
                                        <a class="small" href="@Url.Action("RestablecerContrasena", "Acceso")">¿Olvidaste tu contraseña?</a>
                                    </div>
                                    <div class="text-center">
                                        <a class="small" href="@Url.Action("Registrar", "Acceso")">¿No tienes cuenta? Regístrate aquí.</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Scripts -->
</body>
</html>
