<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Patitos S.A</title>
    @Styles.Render("~/Content/css")
</head>
<body id="page-top">

    <!-- Page Wrapper -->
    <div id="wrapper">

        <!-- Sidebar -->
        <ul class="navbar-nav bg-gradient-primary sidebar sidebar-dark accordion" id="accordionSidebar">

            <!-- Sidebar - Brand -->
            <a class="sidebar-brand d-flex align-items-center justify-content-center" href="@Url.Action("Index","Home")">
                <!-- Logo -->
                <img src="images/logo.png" alt="Patitos S.A." style="width: 40px; height: 40px; margin-right: 10px;">
                <!-- Texto del nombre -->
                <div class="sidebar-brand-text mx-3">Patitos S.A.</div>
            </a>


            <!-- Divider -->
            <hr class="sidebar-divider my-0">

            <!-- Nav Item - Dashboard -->
            <li class="nav-item active">
                <a class="nav-link" href="@Url.Action("Index","Home")">
                    <i class="fas fa-fw fa-tachometer-alt"></i>
                    <span>Inicio</span>
                </a>
            </li>

            <!-- Divider -->
            <hr class="sidebar-divider">

            <!-- Heading -->
            <div class="sidebar-heading">
                Gestión
            </div>

            <!-- Nav Item - Proyectos -->
            <li class="nav-item">
                <a class="nav-link" href="@Url.Action("Index","Proyectos")">
                    <i class="fas fa-fw fa-folder"></i>
                    <span>Proyectos</span>
                </a>
            </li>

            <!-- Nav Item - Tareas -->
            <li class="nav-item">
                <a class="nav-link" href="@Url.Action("Index","Tareas")">
                    <i class="fas fa-fw fa-tasks"></i>
                    <span>Tareas</span>
                </a>
            </li>

            <!-- Solo para Admin -->
            @*if (User.IsInRole("Admin"))*@
            {
                <hr class="sidebar-divider">
                <div class="sidebar-heading">Administración</div>

                <!-- Nav Item - Usuarios -->
                <li class="nav-item">
                    <a class="nav-link" href="@Url.Action("Index","Usuarios")">
                        <i class="fas fa-fw fa-users"></i>
                        <span>Usuarios</span>
                    </a>
                </li>

                <!-- Nav Item - Reportes -->
                <li class="nav-item">
                    <a class="nav-link" href="@Url.Action("Index","Reportes")">
                        <i class="fas fa-fw fa-chart-area"></i>
                        <span>Reportes</span>
                    </a>
                </li>
            }
            <hr class="sidebar-divider d-none d-md-block">

            <!-- Sidebar Toggler -->
            <div class="text-center d-none d-md-inline">
                <button class="rounded-circle border-0" id="sidebarToggle"></button>
            </div>
        </ul>
        <!-- End of Sidebar -->
        <!-- Content Wrapper -->
        <div id="content-wrapper" class="d-flex flex-column">

            <!-- Main Content -->
            <div id="content">

                <!-- Topbar -->
                <nav class="navbar navbar-expand navbar-light bg-white topbar mb-4 static-top shadow">

                    <!-- Topbar Navbar -->
                    <ul class="navbar-nav ml-auto">

                        <!-- User Information -->
                        <li class="nav-item dropdown no-arrow">
                            <span class="nav-link">
                                <span class="mr-2 d-none d-lg-inline text-gray-600 small">@User.Identity.Name</span>
                                <a href="/Account/Logout" class="btn btn-danger btn-sm">Cerrar Sesión</a>
                            </span>
                        </li>

                    </ul>
                </nav>

                <!-- End of Topbar -->
                <!-- Page Content -->
                <div class="container-fluid">
                    @RenderBody()
                </div>
                <!-- End of Page Content -->

            </div>
            <!-- End of Main Content -->
            <!-- Footer -->
            <footer class="sticky-footer bg-white">
                <div class="container my-auto">
                    <div class="copyright text-center my-auto">
                        <span>Copyright &copy; Patitos S.A. 2024</span>
                    </div>
                </div>
            </footer>
            <!-- End of Footer -->

        </div>
        <!-- End of Content Wrapper -->

    </div>
    <!-- End of Page Wrapper -->
    <!-- Bootstrap core JavaScript-->

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>



